<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B90C0C"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_account_balance_list_item_account_name"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_gravity="start"
                android:text="@string/widget_sample_account"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="@string/widget_account_balance_list_account_value"
                android:textColor="@color/light_gray"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/widget_account_balance_list_item_account_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="@string/widget_sample_currency"
                android:textColor="@color/dark_gray"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/hive_power_icon"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/widget_account_balance_list_item_hive_power"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/widget_sample_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12_dp"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/hive_icon"
                    android:layout_marginRight="3dp"/>
                <TextView
                    android:id="@+id/widget_account_balance_list_item_hive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/widget_sample_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12_dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/hbd_icon"
                    android:layout_marginRight="2dp"/>
            <TextView
                android:id="@+id/widget_account_balance_list_item_hbd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/widget_sample_number"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12_dp"
                android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/savings_icon"
                    android:tint="@color/red"
                    android:layout_margin="2dp"/>

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/widget_account_balance_list_item_hive_savings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/widget_sample_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12_dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/savings_icon"
                    android:tint="@color/green" />

                <TextView
                    android:id="@+id/widget_account_balance_list_item_hbd_savings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/widget_sample_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12_dp"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>